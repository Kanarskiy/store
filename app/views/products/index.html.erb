<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @products.each do |product| %>
        <tr>
            <td><%= product.image %></td>
            <td><%= product.title %></td>
            <td><%= sanitize(product.description) %></td>
            <td><%= number_to_currency(product.price) %></td>
            <td><%= link_to 'Show', customer_product_path(current_customer, product) %></td>
            <td><%= link_to 'Edit', edit_customer_product_path(current_customer, product) %></td>
            <td><%= link_to 'Destroy', customer_product_path(current_customer, product), method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Product', new_customer_product_path(current_customer) %>
