<!DOCTYPE html>
<html>
<head>
    <title><%= @page_title || 'Store' %></title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
</head>
<body class="<%= controller_name %>">
<header class="header">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <%= render 'layouts/header' %>
            </div>
        </div>
    </div>
</header>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <%= yield %>
        </div>
    </div>
</div>
<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <%= render 'layouts/footer' %>
            </div>
        </div>
    </div>
</footer>

</body>
</html>
